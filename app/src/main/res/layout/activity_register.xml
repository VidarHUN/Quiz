<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="16dp"
    android:background="@drawable/bgapp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nicname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fredokane_regular"
        android:hint="Your nicname" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/fredokane_regular"
        android:layout_below="@+id/nicname"
        android:hint="Email address" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:fontFamily="@font/fredokane_regular"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/email_address"
        android:hint="Password" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button_on_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredokane_regular"
        android:layout_centerHorizontal="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_below="@+id/register_button_on_register"
        android:fontFamily="@font/fredokane_regular"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/back_button"
        android:src="@drawable/logo" />

</RelativeLayout>